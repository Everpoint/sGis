{
  "name": "sgis",
  "version": "0.3.0",
  "description": "",
  "main": "dist/sGis.js",
  "types": "dist/sGis.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "npm run build-ts && npm run rollup",
    "doc": "typedoc --out doc/ source/ --excludePrivate",
    "version": "node ./config/set_version.js && git add source/sGis.js",
    "lint": "eslint -c ./config/.eslintrc.json source/** -o lint.output",
    "test": "jest --no-cache",
    "build-ts": "tsc",
    "rollup": "tsc -p ./config/tsconfig-rollup.json && rollup --config ./config/rollup.config.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Everpoint/sGis"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^21.1.2",
    "canvas-prebuilt": "^1.6.0",
    "eslint": "^3.11.1",
    "jest": "^21.2.1",
    "jsdoc": "^3.4.0",
    "rollup": "^0.50.0",
    "ts-jest": "^21.0.1",
    "typedoc": "^0.9.0",
    "typescript": "^2.5.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/test/**/*.ts"
    ],
    "roots": [
      "<rootDir>/source/",
      "<rootDir>/test/"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./config/tsconfig-jest.json"
      }
    }
  }
}
